<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Action</th>
  </tr>
  <% @articulos.each do |articulo| %>
  <tr>
    <td><%= articulo.title %></td>
    <td><%= articulo.text %></td>
    <td><%= link_to 'Show', articulo_path(articulo) %></td>
    <td><%= link_to 'Edit', edit_articulo_path(articulo) %></td>
    <td><%= link_to 'Eliminar', articulo_path(articulo), method: :delete, data: { confirm: 'Eliminar?'} %></td>
  </tr>
  <% end %>
</table>
<%= link_to 'Crear', :action=>'new', controller: 'articulos' %>
